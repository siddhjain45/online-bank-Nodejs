<body style="background-color:white; margin:0;padding:0;">
    
        
    <div class="container-fluid "  style="height:250px; background-image:url(./image/globe.gif)">
        <br><br><br>
        
            <h1 class="text-center text-light" style="font-size: 70px; font-family: fantasy;">Indore Union Bank</h1>         
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark " style="background-color:black;">
            <div class="container-fluid " style="background-color:black;">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0" >
                        <li class="nav-item">
                            <a class="nav-link active text-light text-lg-center" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/add_user">Add New User</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/user_details">Manage User</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/logout">Logout</a>
                        </li>
                      
                      
                </div>
            </div>
        </nav>
        <br><br>
        <marquee direction="left" >
            <div class="container bg-danger">
              <h2 class="text-light text-center">Manager(Indore Union Bank - New Palasia)</h2>
            </div>
        </marquee>
        <%if(suc>0){%>
        <center>
            <div class="alert alert-success alert-dismissible fade show" role="alert" style="width: 400px;">
                user added successfully!!
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            </center>
            <%} %>
        <table>
            <tr>
                <td class="container" style="width: 410px;"></td>
                <td>
                    <div class="container my-5 m-lg-5">
                        <div class="card shadow-lg p-3 mb-5 bg-body rounded " style="width: 25rem;">
                            <div class="card-body">
                                <h4 class="card-title text-dark my-2" style="text-align: center;">Add New User</h4>
                                <main class="form-signin my-4">
                                    <form action="/adduser" method="POST">
    
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="floatingInput" autocomplete="off" placeholder="example" name="name" required>
                                            <label for="floatingInput">Enter Name</label>
                                        </div><br>
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="floatingInput" autocomplete="off" maxlength="10" placeholder="***********" name="mno" required>
                                            <label for="floatingInput">Enter Mobile Number</label>
                                        </div><br>
                                        <div class="form-floating">
                                            <input type="email" class="form-control" id="floatingInput" autocomplete="off" placeholder="example@gmail.com" name="email" required>
                                            <label for="floatingInput">Enter Email id</label>
                                        </div><br>
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="floatingInput" autocomplete="off" placeholder="**********" name="adhar" required>
                                            <label for="floatingInput">Enter Adhar Number</label>
                                        </div><br>
                                          <div class="form-floating">
                                            <input type="text" class="form-control" id="floatingInput" autocomplete="off" placeholder="*********" name="ano" required>
                                            <label for="floatingInput">Enter A/C Number</label>
                                        </div><br>
                                        <div class="form-floating">
                                            <select name="type" class="form-select form-select-sm" id="floatingInput">
                                                <option selected></option>
                                                <option value="saving account" >Saving Account</option>
                                                <option value="current account" >Current Account</option>
                                                            </select>
                                            <label for="floatingInput">Select A/c Type</label>
                                        </div><br>
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="floatingInput" autocomplete="off" placeholder="*********"name="bal" required>
                                            <label for="floatingInput">Enter Opening Balace</label>
                                        </div> <br>
                                        <div class="form-floating">
                                            <input type="password" class="form-control" id="floatingPassword" maxlength="4" placeholder="Pin" name="pin" required>
                                            <label for="floatingPassword">Set 4 Digit Pin</label>
                                        </div>
    
    
                                       <br>
                                        <button class="w-100 btn btn-lg btn-warning" type="submit">ADD</button>
                                        
                                    </form>
                                </main>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
          
