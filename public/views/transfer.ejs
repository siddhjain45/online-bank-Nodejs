    <br>
    
<table>
    <tr>
        <td class="container" style="width: 410px;"></td>
        <td>
            <div class="container my-5 m-lg-5">
                <div class="card shadow-lg p-3 mb-5 bg-body rounded " style="width: 25rem;">
                    <div class="card-body">
                        <h4 class="card-title text-dark my-2" style="text-align: center;">Transfer Amount</h4>
                        <main class="form-signin my-4">
                            <form  action="/transferamount" method="POST">
                                <input type="text" hidden value="<%=records._id%>" name="id">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="floatingInput" disabled value="<%=records.name%>" name="name">
                                    <label for="floatingInput">Name</label>
                                </div>
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="floatingPassword" disabled value="<%=records.ano%>" name="ano">
                                    <label for="floatingPassword">Account Number</label>
                                </div>
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="floatingPassword"  name="recano" required>
                                    <label for="floatingPassword">Receiptient's Account Number</label>
                                </div>
                                <div class="form-floating">
                                    <select name="bank" required class="form-select form-select-sm" id="floatingInput">
                                        <option selected></option>
                                        
                                        <option value="bank of baroda">Bank of baroda</option>
                                        <option value="bank of maharashtra">Bank of Maharashtra</option>   
                                        <option value="ICICI bank">ICICI Bank</option>
                                        <option value="PNB">PNB</option>             </select>
                                    <label for="floatingInput">Recipients Bank</label>
                                </div><br>
                              
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="floatingPassword" name="ifsc" required>
                                    <label for="floatingPassword">IFSC Code</label>
                                </div>
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="floatingPassword" name="amount">
                                    <label for="floatingPassword">Transfer  Amount</label>
                                </div>

                               <br>
                                <button class="w-100 btn btn-lg btn-warning" type="submit">Transfer</button>
                                
                            </form>
                        </main>
                    </div>
                </div>
            </div>
        </td>
    </tr>
</table>
