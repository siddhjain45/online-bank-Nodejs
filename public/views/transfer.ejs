    <title>Transfer Amount </title>

</head>

<body >
                    
  <div class="container-fluid "  style="background-color: black;background-image: url(./public/image/globe.gif); height:250px;">
    <br><br><br>
    
        <h1 class="text-center text-light" style="font-size: 70px; font-family: fantasy;">Indore Union Bank</h1>         
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark " style="background-color:black;">
        <div class="container-fluid " style="background-color:black;">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0" >
                    <li class="nav-item">
                        <a class="nav-link active text-light text-lg-center" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/view/<%=records._id%>">View Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/deposit/<%=records._id%>">Deposite Amount</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link text-light" href="/withdraw/<%=records._id%>">Widrawl Amount</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link text-light" href="/transfer/<%=records._id%>">Transfer Amount</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-light" href="/history/<%=records._id%>">View Statements</a>
              </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/logout">Logout</a>
                    </li>
                  
                  
            </div>
        </div>
    </nav>
    <br><br>
    <marquee direction="left" >
        <div class="container bg-danger">
          <h2 class="text-light text-center"><%=records.name %>(Indore Union Bank - New Palasia)</h2>
        </div>
    </marquee>
    <% if(suc>0){%> 
         <center>
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="width: 600px;">
        Amount Transfer successfully
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
       </div>
     </center>
        <%}%>
        <% if(limit>0){%> 
            <center>
            <div class="alert alert-danger alert-dismissible fade show" role="alert" style="width: 600px;">
                Insufficient Balance !!
                 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
               </div>
             </center>
            <%}%>

